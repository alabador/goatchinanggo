---
import logo from '../images/goatchinanggo-logo.png'
import logoSmall from '../images/logo-small.png'
---

<header>
    <div class="logo">
        <a href="/">
            <img 
                src={logoSmall} 
                
                alt="goatchinanggo logo"
            >
        </a>
    </div>
    <nav class="nav">
        <ul class="nav-links">
            <li><a href="#hours">Hours</a></li>
            <li><a href="#menu">Menu</a></li>
            <li><a href="#gallery">Gallery</a></li>
        </ul>
    </nav>
</header>

<style>
    :root {
        --primary: #ffdc74;
    }
    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: var(--primary);
        height: 80px;
        padding: 2rem;
        gap: 2rem 1rem;
    }

    .logo {
        display: flex;
        justify-content: center;
    }

    .logo a {
        display: inline-block;
        width: 72px;
    }

    .logo img {
        width: 100%;
    }

    .nav-links {
        display: flex;
        list-style: none;
        gap: 1rem;
    }

    .nav-links li a{
        text-decoration: none;
        color: black;
    }
</style>