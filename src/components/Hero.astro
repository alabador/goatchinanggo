---
import interior from '../images/restaurant_interior.jpg'
---

<section class="hero-section">
    <div class="hero-title-container">
        <h1 class="hero-title">Goatchinanggo</h1>
        <h2 class="hero-subtitle">Not your typical restaurant.</h2>
    </div>
    <div class="hero-image-container">
        <!-- <img class="hero-image" src={interior} alt="restaurant interior"> -->
    </div>
</section>

<style>
    :root {
        --section-padding: 2rem;
    }

    .hero-section {
        min-height: 600px;
        padding: var(--section-padding);
        display: inline-block;
        width: 100%;
    }

    .hero-title-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding-bottom: 2rem;
    }

    .hero-title {
        color: black;
        font-size: 2rem;
        text-align: center;
    }

    .hero-subtitle {
        text-align: center;
        font-size: 1.2rem;
    }

    .hero-image-container {
        background-image: url('../images/restaurant_exterior.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        height: 350px;
    }

    .hero-image {
        width: 100%;
    }
    
    @media screen and (min-width: 600px) {
        .hero-section {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
        }
        .hero-title-container {
            padding-bottom: 0;
        }
        .hero-image-container {
            height: auto;
        }
    }
    @media screen and (min-width: 900px) {
        .hero-title {
            font-size: 2.5rem;
        }
        .hero-subtitle {
            font-size: 1.5rem;
        }
    }
    
</style>